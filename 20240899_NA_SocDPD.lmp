#main
#------------------------------------------------------
units real
#------------------------------------------------------
timer full
variable start timer
#------------------------------------------------------
variable dt equal 1
timestep ${dt}
dimension 3
boundary p p p
#------------------------------------------------------
atom_style hybrid atomic sphere dpd
#atom_modify map array sort 1 100
#------------------------------------------------------
newton on
#------------------------------------------------------
variable T equal 300.0
variable P equal 1.0
#------------------------------------------------------
variable RcG equal 12.5 # host-guest
variable RcGc equal 10*${RcG} # host-guest after effect
#------------------------------------------------------
variable seed equal 20240526
#------------------------------------------------------
variable dampP equal 500
variable dampT equal 100
variable dumping equal 1000
variable thermoing equal 100
variable nDYN equal 10000
#------------------------------------------------------
comm_modify vel yes
#cutoff ${RcGc}
#neighbor ${RcG} nsq
#neigh_modify delay 0 every 1 check yes binsize ${RcGc}
#------------------------------------------------------
variable hosts_n0 equal 10000
variable guests_n0 equal 100
#------------------------------------------------------
variable L equal 10000 # gets updated during NPT
#------------------------------------------------------
variable box_xhi equal ${L}/2
variable box_xlo equal -${L}/2
variable box_yhi equal ${L}/2
variable box_ylo equal -${L}/2
variable box_zhi equal ${L}/2
variable box_zlo equal -${L}/2
#------------------------------------------------------
region BOX block ${box_xlo} ${box_xhi} ${box_ylo} ${box_yhi} ${box_zlo} ${box_zhi}
#------------------------------------------------------
create_box 2 BOX
#------------------------------------------------------
pair_style dpd ${T} ${RcG} ${seed}
#------------------------------------------------------
#inputs_potential
#aij A (force units)
#aij gamma (force/velocity units) / (1A/fs)
#RcG cutoff (distance units)
pair_coeff 1 1 1 1 ${RcG}
pair_coeff 1 2 1000 1 ${RcG}
pair_coeff 2 2 1 1 ${RcG}
pair_coeff 2 1 1000 1 ${RcG}
#------------------------------------------------------
create_atoms 1 random ${hosts_n0} ${seed} NULL overlap ${RcG} maxtry 1000000
#------------------------------------------------------
mass 1 1
mass 2 1
#------------------------------------------------------
velocity all create ${T} ${seed}
run 0
velocity all scale ${T}
#------------------------------------------------------
#minimize 1.0e-6 1.0e-8 1000 10000
#------------------------------------------------------
dump DUMP all custom ${dumping} data.* id type mass x y z vx vy vz fx fy fz
#------------------------------------------------------
fix NPT all npt temp ${T} ${T} ${dampT} iso ${P} ${P} ${dampP}
#------------------------------------------------------
thermo ${thermoing}
thermo_style custom step atoms temp press density
#------------------------------------------------------
run ${nDYN}
#------------------------------------------------------
unfix NPT
#------------------------------------------------------
fix NVE all nve
#fix NVT all nvt temp ${T} ${T} 10
#------------------------------------------------------
run ${nDYN}
#------------------------------------------------------
create_atoms 2 random ${guests_n0} ${seed} NULL overlap ${RcG} maxtry 1000000
delete_atoms overlap 0.5 all all
reset_atoms id sort yes
#------------------------------------------------------
velocity all scale ${T}
#------------------------------------------------------
run ${nDYN}
#------------------------------------------------------
#------------------------------------------------------
variable stop timer
print "Elapsed time: $(v_stop-v_start:%.6f)"
print "ALL DONE"
#------------------------------------------------------
#End of file
